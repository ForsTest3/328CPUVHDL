LIBRARY ieee;
USE ieee.STD_LOGIC_1164.all;

ENTITY decode IS
    PORT (
        w : IN STD_LOGIC_VECTOR(2 DOWNTO 0);  -- 3-bit input for 3x8 decoder
        En : IN STD_LOGIC;                    -- Enable signal
        y : OUT STD_LOGIC_VECTOR(0 TO 7)      -- 8-bit output for 3x8 decoder
    );
END decode;

ARCHITECTURE Behavior OF decode IS
BEGIN
    WITH En & w SELECT
        y <=
            "10000000" WHEN "1" & "000",
            "01000000" WHEN "1" & "001",
            "00100000" WHEN "1" & "010",
            "00010000" WHEN "1" & "011",
            "00001000" WHEN "1" & "100",
            "00000100" WHEN "1" & "101",
            "00000010" WHEN "1" & "110",
            "00000001" WHEN "1" & "111",
            "00000000" WHEN OTHERS;  -- Default output when En is not active
END Behavior;
